<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Merry Christmas, <%= name %>!</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&family=Poppins:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Poppins", sans-serif;
        background: linear-gradient(135deg, #0c1445, #1a237e, #283593);
        color: #fff;
        min-height: 100vh;
        overflow-x: hidden;
        position: relative;
      }

      .snowflake {
        position: absolute;
        top: -10px;
        color: #fff;
        font-size: 1em;
        animation: fall linear infinite;
        z-index: 1;
      }

      @keyframes fall {
        to {
          transform: translateY(100vh);
        }
      }

      .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: 20px;
        position: relative;
        z-index: 2;
      }

      .header {
        text-align: center;
        margin-bottom: 40px;
        animation: fadeInDown 1.5s ease;
      }

      h1 {
        font-family: "Dancing Script", cursive;
        font-size: 4.5rem;
        margin-bottom: 10px;
        color: #ffeb3b;
        text-shadow: 0 0 15px rgba(255, 235, 59, 0.7);
        animation: glow 2s ease-in-out infinite alternate;
      }

      @keyframes glow {
        from {
          text-shadow: 0 0 15px rgba(255, 235, 59, 0.7);
        }
        to {
          text-shadow: 0 0 25px rgba(255, 235, 59, 0.9),
            0 0 35px rgba(255, 235, 59, 0.5);
        }
      }

      .subtitle {
        font-size: 1.8rem;
        color: #e1f5fe;
        margin-bottom: 30px;
      }

      /* Profile Picture Styles */
      .profile-container {
        position: relative;
        width: 200px;
        height: 200px;
        margin: 0 auto 30px;
        animation: fadeIn 2s ease;
      }

      .profile-picture {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
        border: 5px solid #ffeb3b;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        transition: transform 0.5s ease;
      }

      .profile-picture:hover {
        transform: scale(1.05);
      }

      .profile-frame {
        position: absolute;
        top: -15px;
        left: -15px;
        right: -15px;
        bottom: -15px;
        border: 2px solid rgba(255, 235, 59, 0.5);
        border-radius: 50%;
        animation: rotate 20s linear infinite;
      }

      @keyframes rotate {
        from {
          transform: rotate(0deg);
        }
        to {
          transform: rotate(360deg);
        }
      }

      .profile-badge {
        position: absolute;
        bottom: 10px;
        right: 10px;
        background: #e91e63;
        color: white;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
      }

      .message-container {
        max-width: 900px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(15px);
        border-radius: 20px;
        padding: 40px;
        margin-bottom: 50px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 15px 35px rgba(31, 38, 135, 0.3);
        animation: fadeIn 1.8s ease;
      }

      .typewriter {
        font-size: 1.6rem;
        line-height: 1.8;
        overflow: hidden;
        white-space: pre-wrap;
        text-align: center;
      }

      .gift-section {
        margin: 60px 0;
        text-align: center;
        animation: fadeInUp 2s ease;
      }

      .gift-container {
        display: inline-block;
        margin: 20px 0;
        cursor: pointer;
        perspective: 1000px;
      }

      .gift {
        width: 180px;
        height: 180px;
        background: linear-gradient(45deg, #e91e63, #f06292);
        border-radius: 15px;
        position: relative;
        transform-style: preserve-3d;
        transition: transform 0.8s;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
      }

      .gift:hover {
        transform: scale(1.05);
      }

      .gift.open {
        transform: rotateY(180deg);
      }

      .gift-top {
        position: absolute;
        width: 100%;
        height: 40px;
        background: #ffeb3b;
        top: -20px;
        border-radius: 8px;
        z-index: 10;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
      }

      .gift-ribbon {
        position: absolute;
        width: 40px;
        height: 100%;
        background: #ffeb3b;
        left: 50%;
        transform: translateX(-50%);
        z-index: 5;
      }

      .gift-content {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 4rem;
        border-radius: 15px;
      }

      .gift-back {
        background: #4caf50;
        transform: rotateY(180deg);
      }

      .surprise-message {
        display: none;
        background: rgba(76, 175, 80, 0.9);
        padding: 25px;
        border-radius: 15px;
        max-width: 700px;
        margin: 30px auto 0;
        text-align: center;
        animation: fadeIn 1s;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes fadeInDown {
        from {
          opacity: 0;
          transform: translateY(-30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .countdown-section {
        margin-top: 70px;
        text-align: center;
        animation: fadeIn 2.2s ease;
      }

      .countdown-section h2 {
        font-family: "Dancing Script", cursive;
        font-size: 3rem;
        color: #ffeb3b;
        margin-bottom: 30px;
      }

      .countdown {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-bottom: 30px;
      }

      .countdown-item {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        padding: 20px;
        min-width: 100px;
        border: 1px solid rgba(255, 255, 255, 0.2);
      }

      .countdown-item span {
        display: block;
        font-size: 2.5rem;
        font-weight: bold;
        color: #ffeb3b;
        margin-bottom: 5px;
      }

      .countdown-item p {
        font-size: 1rem;
        color: #e1f5fe;
      }

      .poem-section {
        margin-top: 70px;
        text-align: center;
        animation: fadeIn 2.5s ease;
        max-width: 800px;
      }

      .poem-section h2 {
        font-family: "Dancing Script", cursive;
        font-size: 3rem;
        color: #ffeb3b;
        margin-bottom: 30px;
      }

      .poem {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 40px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        font-style: italic;
        font-size: 1.4rem;
        line-height: 1.8;
        position: relative;
      }

      .poem::before {
        content: '"';
        position: absolute;
        top: 10px;
        left: 20px;
        font-size: 4rem;
        color: rgba(255, 255, 255, 0.2);
        font-family: "Dancing Script", cursive;
      }

      .poem::after {
        content: '"';
        position: absolute;
        bottom: 0;
        right: 20px;
        font-size: 4rem;
        color: rgba(255, 255, 255, 0.2);
        font-family: "Dancing Script", cursive;
      }

      footer {
        margin-top: 60px;
        text-align: center;
        font-size: 1.3rem;
        color: #bbdefb;
        animation: fadeIn 2.5s ease;
      }

      .logout-btn {
        position: absolute;
        top: 20px;
        right: 20px;
        background: rgba(255, 255, 255, 0.2);
        border: none;
        color: white;
        padding: 10px 15px;
        border-radius: 50px;
        cursor: pointer;
        font-size: 1rem;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .logout-btn:hover {
        background: rgba(255, 255, 255, 0.3);
        transform: translateY(-3px);
      }

      .music-player {
        position: fixed;
        bottom: 20px;
        right: 20px;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border-radius: 50px;
        padding: 10px 20px;
        display: flex;
        align-items: center;
        gap: 15px;
        z-index: 100;
      }

      .music-player button {
        background: none;
        border: none;
        color: white;
        font-size: 1.5rem;
        cursor: pointer;
        transition: transform 0.3s;
      }

      .music-player button:hover {
        transform: scale(1.2);
      }

      .christmas-message {
        margin-top: 20px;
        font-size: 1.5rem;
        color: #ffeb3b;
        font-family: "Dancing Script", cursive;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <a href="/logout" class="logout-btn">
        <i class="fas fa-sign-out-alt"></i> Logout
      </a>

      <div class="header">
        <h1>Merry Christmas, <%= name %>!</h1>
        <p class="subtitle">To the most amazing girlfriend in the world</p>

        <!-- Profile Picture Section -->
        <div class="profile-container">
          <img
            src="/images/faith.jpg"
            alt="Kamsi Faith"
            class="profile-picture"
          />
          <div class="profile-frame"></div>
          <div class="profile-badge"><i class="fas fa-heart"></i></div>
        </div>
      </div>

      <div class="message-container">
        <p class="typewriter" id="typewriter"></p>
      </div>

      <div class="gift-section">
        <h2 style="font-size: 2.2rem; margin-bottom: 20px">
          A Special Gift For You
        </h2>
        <div class="gift-container" onclick="openGift()">
          <div class="gift" id="gift">
            <div class="gift-top"></div>
            <div class="gift-ribbon"></div>
            <div class="gift-content">üéÅ</div>
            <div class="gift-content gift-back">üíñ</div>
          </div>
        </div>

        <div class="surprise-message" id="surprise">
          <h3>My Special Christmas Wish For You:</h3>
          <p>
            I hope this Christmas brings you as much joy as you bring into my
            life every single day. You're my greatest gift, and I cherish every
            moment with you. Here's to many more Christmases together!
          </p>
        </div>
      </div>

      <div class="countdown-section">
        <h2>Christmas Countdown</h2>
        <div class="countdown" id="countdown">
          <div class="countdown-item">
            <span id="days">00</span>
            <p>Days</p>
          </div>
          <div class="countdown-item">
            <span id="hours">00</span>
            <p>Hours</p>
          </div>
          <div class="countdown-item">
            <span id="minutes">00</span>
            <p>Minutes</p>
          </div>
          <div class="countdown-item">
            <span id="seconds">00</span>
            <p>Seconds</p>
          </div>
        </div>
        <div class="christmas-message" id="christmas-message"></div>
      </div>

      <div class="poem-section">
        <h2>A Christmas Poem For You</h2>
        <div class="poem">
          <p>
            In winter's chill and Christmas light,<br />
            I see your face, so warm and bright.<br />
            Like snowflakes dancing in the air,<br />
            Your love is beyond all compare.<br /><br />

            The fireplace glows, the tree is adorned,<br />
            With you beside me, I'm forever warned<br />
            That happiness is not in gifts we wrap,<br />
            But in the precious love we share.<br /><br />

            So on this Christmas, my dear Kamsi Faith,<br />
            Know that you're my joy, my breath, my fate.<br />
            Merry Christmas, my love, my everything,<br />
            My heart with yours forever will sing.
          </p>
        </div>
      </div>

      <footer>
        <p>With all my love, always and forever ‚ù§Ô∏è</p>
        <p>by Okeke Akachi Rex - future hubby</p>
      </footer>
    </div>

    <div class="music-player">
      <button id="musicToggle"><i class="fas fa-music"></i></button>
      <span>Christmas Carol</span>
    </div>

    <audio id="christmasMusic" loop autoplay>
      <source src="/images/ms.mp3" type="audio/mpeg" />
      Your browser does not support the audio element.
    </audio>

    <script>
      // Snowflake animation
      function createSnowflake() {
        const snowflake = document.createElement("div");
        snowflake.classList.add("snowflake");
        snowflake.innerHTML = "‚ùÑ";
        snowflake.style.left = Math.random() * 100 + "vw";
        snowflake.style.animationDuration = Math.random() * 3 + 2 + "s";
        snowflake.style.opacity = Math.random();
        snowflake.style.fontSize = Math.random() * 10 + 10 + "px";

        document.body.appendChild(snowflake);

        setTimeout(() => {
          snowflake.remove();
        }, 5000);
      }

      setInterval(createSnowflake, 200);

      // Typewriter effect
      const text =
        "My dearest <%= name %>, this Christmas I want you to know how much you mean to me. You brighten my days and fill my life with joy. Being with you is the greatest gift I could ever receive. Merry Christmas, my beautiful girlfriend!";
      const typewriterElement = document.getElementById("typewriter");
      let i = 0;

      function typeWriter() {
        if (i < text.length) {
          typewriterElement.innerHTML += text.charAt(i);
          i++;
          setTimeout(typeWriter, 50);
        }
      }

      typeWriter();

      // Gift box interaction
      function openGift() {
        const gift = document.getElementById("gift");
        const surprise = document.getElementById("surprise");

        gift.classList.add("open");

        setTimeout(() => {
          surprise.style.display = "block";
        }, 800);
      }

      // Music player
      const musicToggle = document.getElementById("musicToggle");
      const christmasMusic = document.getElementById("christmasMusic");

      musicToggle.addEventListener("click", () => {
        if (christmasMusic.paused) {
          christmasMusic.play();
          musicToggle.innerHTML = '<i class="fas fa-pause"></i>';
        } else {
          christmasMusic.pause();
          musicToggle.innerHTML = '<i class="fas fa-music"></i>';
        }
      });

      // Christmas Countdown
      function updateCountdown() {
        const now = new Date();
        const currentYear = now.getFullYear();

        // Set Christmas date (December 25th)
        let christmasDate = new Date(currentYear, 11, 25);

        // If Christmas has already passed this year, set to next year
        if (now > christmasDate) {
          christmasDate = new Date(currentYear + 1, 11, 25);
        }

        const diff = christmasDate - now;

        // If it's Christmas day
        if (diff <= 0) {
          document.getElementById("countdown").style.display = "none";
          document.getElementById("christmas-message").innerHTML =
            "üéÑ Merry Christmas, my love! üéÑ";
          return;
        }

        const days = Math.floor(diff / (1000 * 60 * 60 * 24));
        const hours = Math.floor(
          (diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)
        );
        const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((diff % (1000 * 60)) / 1000);

        document.getElementById("days").textContent =
          days < 10 ? "0" + days : days;
        document.getElementById("hours").textContent =
          hours < 10 ? "0" + hours : hours;
        document.getElementById("minutes").textContent =
          minutes < 10 ? "0" + minutes : minutes;
        document.getElementById("seconds").textContent =
          seconds < 10 ? "0" + seconds : seconds;
      }

      // Update countdown every second
      setInterval(updateCountdown, 1000);
      updateCountdown(); // Initial call
    </script>
  </body>
</html>

